<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/depositbackground"
    tools:context=".DepositPage">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:gravity="fill|center_vertical"
        android:background="@drawable/depositpage"
        android:layout_marginTop="5dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#636302"
            android:text="DEPOSIT HERE"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="245dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:background="#4666E0"
            android:textColor="#F7F4F4"
            android:textColorHint="#FDFCFC"
            android:ems="10"
            android:hint=" Enter User Name"
            android:inputType="textPersonName"
            android:textStyle="bold" />

        <Button
            android:layout_width="76dp"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/roundablebutton"
            android:drawableLeft="@drawable/search"
            android:paddingLeft="10dp"
            android:textSize="15dp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#F4F5E9"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:hint="Name....."
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#F4F5E9"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:hint="Account No......"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#F4F5E9"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:hint="Available Balance......"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="#F4F5E9"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:hint="Deposit Amount"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="#F4F5E9"
            android:layout_marginTop="10dp"
            android:hint="Total Amount"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:textStyle="bold"/>

        <Button

            android:layout_width="50dp"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundablebutton"
            android:drawableLeft="@drawable/totalcomander"
            android:paddingLeft="10dp"
            android:textSize="14dp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deposit"
            android:textColor="#011533"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@drawable/roundablebutton"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"

            />
    </LinearLayout>


</LinearLayout>



